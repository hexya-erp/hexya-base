<?xml version="1.0" encoding="utf-8"?>
<hexya>
    <data>
        <view id="base_view_cron_tree" model="Cron">
            <tree string="Workers">
                <field name="Name"/>
                <field name="ModelMethodStr"/>
                <field name="ExecuteNET"/>
                <field name="Status" invisible="1"/>
                <button name="ButtonRefresh" string="Syncronize crons" type="object" icon="fa-refresh"/>
                <button name="ButtonRun" string="Manual Run" type="object" icon="fa-share"/>
                <button name="ButtonSuspend" string="Suspend" type="object" icon="fa-pause text-danger" attrs="{'invisible': [('status', '=', False)]}"/>
                <button name="ButtonResume" string="Resume" type="object" icon="fa-eject fa-rotate-90 text-success" attrs="{'invisible': [('status', '=', True)]}"/>
            </tree>
        </view>

        <view id="base_view_cron_form" model="Cron" delete="false">
            <form string="Crons">
                <sheet>
                    <h1>
                        <field name="Name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="TargetWorker"/>
                            <field name="TargetModel"/>
                            <field name="TargetMethod"/>
                            <field name="TargetParams"/>
                        </group>
                        <group>
                            <field name="ExecuteNET"/>
                            <field name="ExecuteCount"/>
                        </group>
                    </group>
                    <group>
                        <div style="display:flex;">
                            <div style="width: 25%;  float:left">
                                <div style="width:10%; float:left">
                                    <label string="At"/>
                                </div>
                                <div style="width:60%; float:left">
                                    <field nolabel="1" name="TimeAtDate"/>
                                </div>
                            </div>
                            <div style="width: 25%; float:left">
                                <div style="float: left;margin-left: 40px">
                                    <field name="RepeatBool"/>
                                    <label string="Repeat"/>
                                </div>
                                <div style="float: left; margin-left: 10px; width; 200px" attrs="{'invisible': [('repeat_bool', '=', False)]}">
                                    <div>
                                        <label string="Every"/>
                                        <field name="RepeatLapseAmmount" style="width:30px"/>
                                        <field name="RepeatLapseSelection" style="width:53%"/>
                                    </div>
                                    <div>
                                        <field name="RepeatAmmountBool"/>
                                        <label string="Only"/>
                                        <field name="RepeatAmmount" style="width:30px"/>
                                        <label string="Times"/>
                                    </div>
                                </div>
                            </div>
                            <div style="width: 25%; float:left">
                                <div style="float: left;">
                                    <field name="Catchup"/>
                                    <label string="Catch-up"/>
                                </div>
                            </div>
                            <div style="width: 25%; float:left">
                                <div style="margin-left: 10px; width: 100%">
                                    <label string="With Mask"/>
                                    <field name="MaskBool"/>
                                </div>
                                <div style=" margin-left: 10px; width: 100%">
                                    <field name="Mask" attrs="{'invisible': [('mask_bool', '=', False)]}"/>
                                </div>
                            </div>
                        </div>
                    </group>
                </sheet>
            </form>
        </view>

