<?xml version="1.0" encoding="utf-8"?>
<yep>
    <data>

        <!-- res.groups -->
        <view id="base_view_groups_search" model="ResGroups">
            <search string="Groups">
                <field name="Name" string="Group"/>
            </search>
        </view>

        <view id="base_view_groups_tree" model="ResGroups">
            <tree string="Groups" create="false">
                <field name="Name"/>
            </tree>
        </view>

        <action id="base_action_res_groups" name="Groups" type="ir.actions.act_window" model="ResGroups"
                view_mode="tree"/>


        <menuitem id="base_menu_action_groups" name="Groups" sequence="2" action="base_action_res_groups"
                  parent="base_menu_users"/>

        <action id="base_action_server_reload_groups" name="Reload Groups" type="ir.actions.server" model="ResGroups"
                method="ReloadGroups" src_model="ResGroups"/>

        <menuitem id="base_menu_action_reload_groups" name="Reload Groups" sequence="3" action="base_action_server_reload_groups"
                  parent="base_menu_users"/>

    </data>
</yep>
